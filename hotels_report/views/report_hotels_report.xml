<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_hotelx">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="report.external_layout">
                <div class="page">
                    <div>
                    	<span style="font-size: 18px;"><b>Sold By</b></span> : <span style="font-size: 16px;" t-esc="docs.salesperson_id.name"/>
                        <center>
                            <span><h3><b>Hotel Reports</b></h3></span>,
                        </center>
                    </div>

                    <div class="row mt32 mb32">
                        <div class="col-xs-4">

                            <p>
                                <t t-if="docs.date_from"><strong>Date from : </strong> <span t-esc="docs.date_from"/><br/></t>
                                <t t-if="docs.date_to"><strong>Date to : </strong> <span t-esc="docs.date_to"/></t>
                            </p>
                        </div>
                    </div>
                    

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Number</th>
                                <th class="text-right">Date</th>
                                <th class="text-right">Customer</th>
                                <th class="text-right">Rooms</th>
                                <th class="text-right">Checkin</th>
                                <th class="text-right">Checkout</th>
                                <th class="text-right">Payments</th>
                                <th class="text-right">Balance</th>
                                <th class="text-right">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="orders" t-as="a">
                                <td>
                                    <span t-esc="a.name" />
                                </td>
                                <td class="text-right" style="white-space: text-nowrap;">
                                    <span t-esc="a.date_order" />
                                </td>
                                <td class="text-right" style="white-space: text-nowrap;">
                                    <span t-esc="a.partner_id.name" />
                                </td>
                                
                                   
                                <td class="text-right" style="white-space: text-nowrap;">
                                        <t t-foreach="a.room_lines" t-as="b">
                                        <span t-esc="b.product_id.name" />,<p/>
                                        </t>
                                </td>
                                   
                                

                                <td class="text-right" style="white-space: text-nowrap;">
                                    <span t-esc="a.checkin_date" />
                                </td>
                                <td class="text-right" style="white-space: text-nowrap;">
                                    <t t-foreach="a.room_lines[-1]" t-as="c">
                                    <span t-esc="c.checkout_date" /></t>
                                </td>

                                <td class="text-right" style="white-space: text-nowrap;">
                                    <span t-esc="a.all_payments" />
                                </td>
                                <td class="text-right" style="white-space: text-nowrap;">
                                    <span t-esc="a.outstanding" />
                                </td>

                                <td class="text-right" style="white-space: text-nowrap;">
                                    <span t-field="a.amount_total" t-options='{"widget": "monetary", "display_currency": a.company_id.currency_id}' />
                                </td>
                            </tr>

                            <tr>
												
												<td></td>
                                                <td></td>
                                                <td> </td>
                                                <td> </td>
												<td></td>
												<td><strong>Net Total:</strong></td> 
												<td><span t-esc="sum(line.all_payments for line in orders)"/></td>
                                                <td><span t-esc="sum(line.outstanding for line in orders)"/></td>
                                                <td><span t-esc="sum(line.amount_total for line in orders)"/></td>
												 
												
							</tr>
                            
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </t>
</template>
</odoo>
