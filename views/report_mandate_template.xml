<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_mandate">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="report.external_layout">
                <div class="page">
                    <div>
                    	<span style="font-size: 18px;">User</span> : <span style="font-size: 16px;" t-esc="docs.salesperson_id.name"/>
                    </div>

                    <div class="row mt32 mb32">
                        <div class="col-xs-4">
                            <p>
                                <t t-if="docs.date_from"><strong>Date from :</strong> <span t-esc="docs.date_from"/><br/></t>
                                <t t-if="docs.date_to"><strong>Date to :</strong> <span t-esc="docs.date_to"/></t>
                            </p>
                        </div>
                    </div>
                    
                    
                    <div class="row">
                        <div class="col-xs-4" style="font-size: 17px;">
                            <strong>The Manager</strong><br/>
                            <span style="font-size: 17px;" t-field="docs.ikoyi_bank.bank_id"/><br/>
                            <span style="font-size: 17px;" t-field="docs.ikoyi_bank.address"/><br/>
                            <span style="font-size: 17px;" t-field="docs.ikoyi_bank.city"/><br/>
                            <span style="font-size: 17px;" t-field="docs.ikoyi_bank.state"/><br/>
                            <br/><br/>
                            <h5><strong>Dear Sir/Madam, </strong></h5>
                        </div><br/>
                        
                    </div>
                    <br/><br/>
                    <div class="col-xs-12">
                        <h4 style="text-align:center">
                            <u><strong>PAYMENT OF VENDORS VIA <span t-field="docs.ikoyi_bank.bank_id"/></strong></u>
                        </h4>
                    </div>
                    <br/>
                    <div class="col-xs-12">
                        <h5>
                            <p>Please credit the under listed accounts individually and debit our operations account number <span t-field="docs.ikoyi_bank.acc_number"/> accordingly;</p>
                        </h5>
                        <br/>
                
                        
                        <div class="col-xs-4 pull-right mt8" name ="right_name" style="font-size: 17px;">
                        <strong></strong><br/>
                        </div>
                    </div>
                   

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                               <th>S/N</th>
                                <th>VENDOR</th>
                                <th><strong>BANK</strong></th>
                                <th><strong>ACCOUNT</strong></th>
                                <!--<th>Reference</th>
                                <th>Journal</th>
                                <th>QTY</th-->
                                <th>Amount</th>
                               
                            </tr>
                        </thead>
                        <tbody> 
                            <tr t-foreach="orders" t-as="a">
                                <td>
                                    <span t-esc="a.id" />
                                </td>
                                <td>
                                    <span t-esc="a.name.name" />
                                </td>
                                <td style="white-space: text-nowrap;">
                                    <span t-esc="a.vendor_bank.name" />
                                </td>
                                <td style="white-space: text-nowrap;">
                                    <span t-esc="a.vendor_account.acc_number" />
                                </td>
                                <!--<td style="white-space: text-nowrap;">
                                    <span t-esc="a.purchase_id.name" />
                                </td>
                                <td style="white-space: text-nowrap;">
                                    <span t-esc="a.pay_account.name" />
                                </td>
                                <td style="white-space: text-nowrap;">
                                    <span t-esc="a.product_qty" />
                                </td>-->
                                 
                                <td style="white-space: text-nowrap;">
                                    <span t-field="a.pay_amount" t-options='{"widget": "monetary", "display_currency": a.create_uid.company_id.currency_id}' />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-xs-4" style="font-size: 18px; align-center">
                            <p> Thanks for your co-operation. </p>
                        </div>
                    </div>
                    <p></p>
                    <div class="row">
                        <div class="col-xs-12">
                            <p style="font-size: 17px;">Yours faithfully,<br/>
                            <strong>FOR: IKOYI CLUB 1938</strong>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-3" style="font-size: 17px;">
                            <strong>.......................</strong><br/>
                            <strong>AUTHORIZED SIGNATORY</strong>

                        </div>
                        <div class="col-xs-4 pull-right mt8" name ="right_name" style="font-size: 17px;">
                            <strong>.......................</strong><br/>
                            <strong>AUTHORIZED SIGNATORY</strong>
                        </div>
                                
                    </div>
                    
                </div>
            </t>
        </t>
    </t>
</template>
</odoo>
