<?xml version="1.0"?>
<odoo>
    <data>

        <!-- Report Action -->
        <report id="print_single_mandate_report"
            string="Mandate"
            model="payment.mandate.ikoyi"
            report_type="qweb-pdf"
            name="ikoyi_module.print_singlemandate_template"
            file="ikoyi_module.print_singlemandate_template"
            menu="True"
            />

        <report id="print_single_requisition_report"
            string="Requisition"
            model="payment.schedule.ikoyi"
            report_type="qweb-pdf"
            name="ikoyi_module.print_singlerequisition_template"
            file="ikoyi_module.print_singlerequisition_template"
            menu="True"
            />

        <!-- Allocation Offer Letter Template print_singlerequisition_template-->
        <template id="print_singlemandate_template">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.external_layout">
                        <div class="page">
                            <div class="row">
                                <h2>
                                    <span>
                                        <center><u>IKOYI CLUB 1938</u></center>
                                    </span>
                                </h2>
                            </div>
                            <div class="row">
                                <center> 
                                    <div class="watermark;col-xs-8" styles="position:absolute;opacity:0.8; font-size:50px;width:200%;z-index">
                                        <img src="/ikoyi_module/static/img/ikoyi_logo2.png" style="max-height:140px;max-width:100px;"/>
                                     
                                    </div>
                                </center>
                            </div>
                            <div class="row">
                                <div class="col-xs-3" style="font-size: 17px;">
                                    <!--<strong>Ref No:<span t-field="o.name"/> </strong><br/>
                                     <strong>GRN Number:<span t-field="o.stock_id.name"/> </strong><br/>-->
                                      <strong>Date:<span t-raw="time.strftime('%Y-%m-%d')"/> </strong><br/>
                                       <!--<strong>Store Location:<span t-field="o.location.name"/> </strong><br/>-->
                                </div><br/>
								
                            </div><br/>
							<div class="row">
                                <div class="col-xs-4" style="font-size: 17px;">
									<strong>The Manager</strong><br/>
                                    <span style="font-size: 17px;" t-field="o.account_number.bank_id"/><br/>
                                    <span style="font-size: 17px;" t-field="o.account_number.address"/><br/>
                                    <span style="font-size: 17px;" t-field="o.account_number.city"/><br/>
                                    <span style="font-size: 17px;" t-field="o.account_number.state"/><br/>
									<br/><br/>
                                    <h5><strong>Dear Sir/Madam, </strong></h5>
                                </div><br/>
								
							</div>
							<br/><br/>
							<div class="col-xs-12">
                                <h4 style="text-align:center">
                                    <u><strong>PAYMENT OF VENDORS VIA <span t-field="o.account_number.bank_id"/></strong></u>
                                </h4>
                            </div>
                            <br/>
                            <div class="col-xs-12">
                                <h5>
                                    <p>Please credit the under listed accounts individually and debit our operations account number <span t-field="o.account_number.acc_number"/> accordingly;</p>
                                </h5>
                                <br/>
						
								
                                <div class="col-xs-4 pull-right mt8" name ="right_name" style="font-size: 17px;">
                                   <strong></strong><br/>
                                </div>
                            </div><br/><br/>
                           
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <th><strong>S/N</strong></th>
                                            <th><strong>VENDOR</strong></th>
                                            <th><strong>BANK</strong></th>
                                            <th><strong>ACCOUNT</strong></th>
                                            <th><strong>AMOUNT</strong></th> 
                                        </tr>
                                    </thead>
                                    <tbody>
                                    <tr> 
                                        <!--<tr t-foreach="o" t-as="a">-->
                                            <td>
                                                <span t-esc="o.id" />
                                            </td>
                                            <td>
                                                <span t-esc="o.name.name" />
                                            </td>
                                            <td style="white-space: text-nowrap;">
                                                <span t-esc="o.vendor_bank.name" />
                                            </td>
                                            <td style="white-space: text-nowrap;">
                                                <span t-esc="o.vendor_account.acc_number" />
                                            </td>
                                            <!--<td style="white-space: text-nowrap;">
                                                <span t-esc="o.purchase_id.name" />
                                            </td>
                                            <td style="white-space: text-nowrap;">
                                                <span t-esc="o.pay_account.name" />
                                            </td>-->
                                            
                                            
                                            <td style="white-space: text-nowrap;">
                                                <span t-field="o.pay_amount" t-options='{"widget": "monetary", "display_currency": o.create_uid.company_id.currency_id}' />
                                            </td>
                                        </tr>
                                    </tbody>
                                <div class="row"></table><p/><p/><p/><p/><p/><p/>
                        <div class="col-xs-4" style="font-size: 18px; align-center">
                            <p> Thanks for your co-operation. </p>
                        </div>
                    </div>
                    <p></p>
                    <div class="row">
                        <div class="col-xs-12">
                            <p style="font-size: 17px;">Yours faithfully,<br/>
                            <strong>FOR: IKOYI CLUB 1938</strong>
                            </p>
                        </div>
                    </div>

















                                <div class="row">
                                <div class="col-xs-4 pull-right mt8" name ="right_name" style="font-size: 17px;">
                                    <strong>Authorized Signatory:</strong><p/><p/>
                                    <strong>.............................................</strong>

                                </div>
                                <div class="col-xs-4 pull-left mt8" name ="left_name" style="font-size: 17px;">
                                    <strong>Signature:................</strong><br/>
                                    <strong>Ikoyi Club 1938</strong>

                                </div>
                                <!--<div class="col-xs-6 col-xs-offset-8" style="font-size: 17px;">
                                    <strong>All Payments:</strong> <span t-field="o.all_payments"/><br/>
                                    <strong>Outstanding:</strong> <span t-field="o.outstanding"/><br/>
                                    <strong>Total:</strong> <span t-field="o.amount_total"/>
                                </div>-->
                                
                            </div> 
							</div>
                            
					</t>
				</t>
			</t>
		</template>

        <!-- Allocation Offer Letter Template -->
        <template id="print_singlerequisition_template">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.external_layout">
                        <div class="page">

                            <div class="row">
                                <h2>
                                    <span>
                                        <center><u>IKOYI CLUB 1938</u></center>
                                    </span>
                                </h2>
                            </div>
                            <div class="row">
                                <center> 
                                    <div class="watermark;col-xs-8" styles="position:absolute;opacity:0.8; font-size:50px;width:200%;z-index">
                                        <img src="/ikoyi_module/static/img/ikoyi_logo2.png" style="max-height:140px;max-width:100px;"/>
                                     
                                    </div>
                                </center>
                            </div>
                            <div class="row">
                                <div class="col-xs-4 pull-right mt8" name ="right_name" style="font-size: 17px;">
                                    <!--<strong>Ref No:<span t-field="o.name"/> </strong><br/>
                                     <strong>GRN Number:<span t-field="o.stock_id.name"/> </strong><br/>-->
                                      <strong>Date:<span t-raw="time.strftime('%Y-%m-%d')"/> </strong><br/>
                                       <!--<strong>Store Location:<span t-field="o.location.name"/> </strong><br/>-->
                                </div><br/>
                                <div class="row">
                                   <div class="col-xs-4 pull-left mt8" name ="left_name" style="font-size: 17px;">
									<!--<strong>The Manager</strong><br/>-->
                                    <span style="font-size: 17px;" t-field="o.name.name"/><br/>
                                    <span style="font-size: 17px;" t-field="o.name.street"/><br/>
                                    <span style="font-size: 17px;" t-field="o.name.website"/><br/>
									<br/><br/>
                                    <!--<h5><strong>Dear Sir/Madam, </strong></h5>-->
                                   </div><br/>
								
				                </div>

                                <div class="col-xs-4 pull-right mt8" name ="right_name" style="font-size: 17px;">
                                   <strong></strong><br/>
                                </div>
                            </div><br/><br/>
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>          
                                            <th><strong>INVOICE NUMBER</strong></th>
                                            <th><strong>INVOICE DATE</strong></th>
                                            <th><strong>INVOICE DETAILS</strong></th>
                                            <th><strong>AMOUNT(EXCL. TAX)</strong></th>
                                            <!--<th><strong>TAX</strong></th>
                                            <th><strong>Reference</strong></th>
                                            <th><strong>Journal</strong></th>-->
                                            <th><strong>TOTAL AMOUNT</strong></th> 
                                        </tr>
                                    </thead>
                                  <t t-foreach="o.invoice_ids.invoice_line_ids" t-as="line">
                                    <tbody>
                                    <tr> 
                                        <!--<tr t-foreach="o" t-as="a">-->
                                            <td>
                                                <span t-esc="o.invoice_ids.number" />
                                            </td>
                                            <td>
                                                <span t-esc="o.invoice_ids.date_invoice" />
                                            </td>
                                            <td>
                                                <span t-esc="line.name" />
                                            </td>
                                            <!--<td style="white-space: text-nowrap;">
                                                <span t-esc="o.vendor_account.acc_number" />
                                            </td>-->
                                            <td>
                                                <span t-field="o.invoice_ids.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.create_uid.company_id.currency_id}' />
                                            </td>
                                            <!--<td style="white-space: text-nowrap;">
                                                <span t-esc="o.purchase_id.name" />
                                            </td>
                                            <td style="white-space: text-nowrap;">
                                                <span t-esc="o.pay_account.name" />
                                            </td>
                                            <td>
                                                <span t-field="o.invoice_ids.amount_tax" t-options='{"widget": "monetary", "display_currency": o.create_uid.company_id.currency_id}' />
                                            </td>-->
                                            <td style="white-space: text-nowrap;">
                                                <span t-field="o.invoice_ids.amount_total" t-options='{"widget": "monetary", "display_currency": o.create_uid.company_id.currency_id}' />
                                            </td>
                                        </tr>
                                    </tbody>
                                 </t>
                                </table>
                                <div class="row" name="total" style="font-size: 14px;">
                                    <div class="col-xs-4 pull-left">
                                        <table class="table table-condensed">
                                            <thead>
                                                <tr>          
                                                    <th><strong>TAX DESCRIPTION</strong></th>
                                                    <th><strong>AMOUNT</strong></th>
                                                    
                                                </tr>
                                            </thead>
                                        <t t-foreach="o.invoice_ids.tax_line_ids" t-as="a">
                                            <tbody>
                                            <tr> 
                                                <!--<tr t-foreach="o" t-as="a">-->
                                                    <td>
                                                        <span t-esc="a.name"/>
                                                    </td>
                                                    <td>
                                                        <span t-esc="'{0:,.2f}'.format(int(a.amount)) "/>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </t>
                                        </table>
                                    </div>
                                </div>    
							</div>
                            <div class="row">
                                <div class="col-xs-3" style="font-size: 17px;">
                                    <strong>Signature:...................</strong><br/>
                                    <strong>Vendor</strong>

                                </div>
                                <div class="col-xs-4 pull-right mt8" name ="right_name" style="font-size: 17px;">
                                    <strong>Signature:................</strong><br/>
                                    <strong>Ikoyi Club 1938</strong>

                                </div>
                                <!--<div class="col-xs-6 col-xs-offset-8" style="font-size: 17px;">
                                    <strong>All Payments:</strong> <span t-field="o.all_payments"/><br/>
                                    <strong>Outstanding:</strong> <span t-field="o.outstanding"/><br/>
                                    <strong>Total:</strong> <span t-field="o.amount_total"/>
                                </div>-->
                                
                            </div>
						 
					</t>
				</t>
			</t>
		</template>

         
	</data>
</odoo>
